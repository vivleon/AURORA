{
  "policy_version": "1.1",
  "scopes": {
    "mail.send": {
      "allow": true,
      "approval": "explicit",
      "ttl_hours": 12
    },
    "mail.compose": {
      "allow": true,
      "approval": "none",
      "ttl_hours": 0
    },
    "system.exec.limited": {
      "allow": true,
      "signed_only": true,
      "ttl_hours": 1
    },
    "files.delete": {
      "allow": false
    },
    "files.read": {
      "allow": true,
      "approval": "session",
      "ttl_hours": 8
    }
  },
  "risk_rules": {
    "high_risk": [
      "payment.*",
      "os.settings",
      "update.apply",
      "mail.send",
      "system.exec",
      "system.exec.limited",
      "files.delete"
    ],
    "require_consent_each_time": true
  },
  "domain_allowlist": [
    "gmail.com",
    "microsoft.com",
    "naver.com"
  ],
  "consent": {
    "require_each_time": true,
    "show_purpose": true,
    "show_alternative": true
  }
}